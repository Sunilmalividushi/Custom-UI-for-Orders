---
slug: module_141/module_iframe/view/:id
response_headers: >
  {
    "X-Frame-Options": null
  }
authorization_policies:
  - modules/siteglide_system/module_is_in_admin
layout: modules/module_141/templates/1
---
{% graphql data = "modules/module_141/properties/get_order" order_id: context.params.id -%}

<section class="sg-content">
  <div class="container">
    <div class="row">
		<div class="col-12 mb-5 d-flex justify-content-end">
			<a class="btn btn-primary" href="/module_141/module_iframe/index?{% include 'modules/siteglide_system/modules/auth' -%}">Back to all Orders</a>
		</div>
      <div class="col-12">
        <p>Order ID : {{ data.records.results[0].id }}</p>
        <p>Email : {{ data.records.results[0].properties['module_field_14/order_2']}}</p>
         <p>Status : {{ data.records.results[0].properties['module_field_14/order_3']}}</p>
        <table class="table table-bordered">
          	<thead>
				<th scope="col" class="sg-bg-primary">Référence</th>
				<th scope="col" class="sg-bg-primary">Photo</th>
				<th scope="col" class="sg-bg-primary">Désignation </th>
				<th scope="col" class="sg-bg-primary">Quantité </th>				
				<th scope="col" class="sg-bg-primary">TVA Prod inclus</th>			
				<th scope="col" class="sg-bg-primary">TVA Eco inclus </th>				
				<th scope="col" class="sg-bg-primary">Total TTC</th>
			</thead>
			<tbody>
				{% assign newData = data.records.results[0].properties['module_field_custom_14/order_8'] | parse_json %}
			
				{% for item in newData -%}
			
					<tr>
						{% comment %} Produits {% endcomment %}
						<td>
							{% comment %} Référence {% endcomment %}
							{{ item['Référence'] }}
						</td>
						
						<td>
							{% comment %} Désignation {% endcomment %}
							{% comment %} {{ item.product_name }}<br><br> {% endcomment %}
							<img width="100" src="{{item['Photo']}}" />
						</td>
						<td>
							{% comment %} Désignation {% endcomment %}
							{% comment %} {{ item.product_name }}<br><br> {% endcomment %}
							{{item['Désignation']}}
						</td>
						<td>
							{% comment %} Quantity {% endcomment %}
							{{ item['Quantité']}}
						</td>
						
						<td>
							{% comment %} TVA Prod {% endcomment %}
							{{item['TVA Prod']}}
							
						</td>
						
						<td>
							{% comment %} Eco TVA {% endcomment %}
							{{item['Eco TVA']}}
						</td>
						
						<td>
							{% comment %} Total TTC {% endcomment %}
							{{item['Total TTC']}}
						</td>
					</tr>
				{% endfor -%}
				
			</tbody>
        </table>
        <table class="order-details_table table table-bordered bottom w-100 mb-4 mt-5">
	<tr>
		<th>HT Produit</th>
		<td>
			{{data.records.results[0].properties['module_field_custom_14/order_1']}}
		</td>
		<td rowspan="2">
			{{data.records.results[0].properties['module_field_custom_14/order_5']}}
		</td>
	</tr>
	<tr>
		<th>HT Eco Taxe</th>
		<td>
		{{data.records.results[0].properties['module_field_custom_14/order_2']}}
		</td>
	</tr>
	<tr>
		<th>TVA Produit</th>
		<td>{{data.records.results[0].properties['module_field_custom_14/order_3']}}</td>
		<td rowspan="2">{{data.records.results[0].properties['module_field_custom_14/order_6']}}</td>
	</tr>
	<tr>
		<th>TVA Eco</th>
		<td>{{data.records.results[0].properties['module_field_custom_14/order_4']}}</td>
		
	</tr>
	<tr>
		<th>Prix total</th>
		<td></td>
		<td>{{data.records.results[0].properties['module_field_custom_14/order_7']}}</td>
	</tr>
</table>

      </div>
    </div>
  </div>
</section>
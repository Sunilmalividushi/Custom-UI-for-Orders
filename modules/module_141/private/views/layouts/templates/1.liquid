<!DOCTYPE html>
	<head>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
		<style>
			body{
				background: #f5f5f5;
			}
			.container{
				max-width: 100% !important;
				padding: 20px 15px;
			}
			.sg-bg-primary{
				background-color: #1592da !important;
			}
			.form-control{
				background: #f5f5f5;
				border: 1px solid #0000;
				border-radius: 3px;
				box-shadow: inset 0 1px 2px #0000001a;
				color: #828282;
				font-family: Gilroy Medium,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol;
				font-size: 14px;
				font-weight: 300;
				height: 45px;
				padding: 10px;
			}
			.search-block .icon{
				right: 10px;
    			top: 9px;
			}
			.search-block svg{
				width: 18px !important;
			}
			table{
				border: 1px solid #d4d4d4 !important;
				background: #fff;
			}
			.orders-custom-table{
				margin-top: -40px;
			}
			table#order-table a{
				text-decoration:none;
			}
			td,th {
			height: 50px;
			vertical-align: middle;
			}
			.table>:not(:first-child){
				border-top:none;
			}
			.page-link:focus {
				box-shadow:none !important;
			}
			.view svg, .page-item svg{
				width: 20px;
				height: 24px;
				margin: auto;
				display: block;
			}
			.d-none{
				display: none;
			}
			.filter-form{
				z-index: 9999;
			}
			@media print {
				.ignore-print {
					display: none !important;
				}
			}		
		</style>
	</head>
	<body class="container mt-3">
		{% include 'modules/siteglide_system/constants' -%}
		{{ content_for_layout }}
	</body>
</html>